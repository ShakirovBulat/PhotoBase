<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:PhotoBase"
             x:Class="PhotoBase.TakePhoto"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="name" BackgroundColor="LightGray" Margin="40, 40, 40, 0" FontSize="15"/>
            <local:PinchToZoomContainer>
                <local:PinchToZoomContainer.Content>
                    <Image x:Name="img" Margin="40"/>
                </local:PinchToZoomContainer.Content>
            </local:PinchToZoomContainer>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>